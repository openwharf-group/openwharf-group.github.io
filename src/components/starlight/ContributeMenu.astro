---
import UIString from "../common/UIString.astro";
import { getLanguageFromURL } from "../../util";
import LinkList from "../common/LinkList.astro";

export interface Props {
	editHref: string;
}

const { editHref } = Astro.props as Props;

const lang = getLanguageFromURL(Astro.url.pathname);

const linkItems = [
	{
		href: `/${lang}/contribute/`,
		text: "rightSidebar.contributorGuides",
		depth: 2,
		icon: 'open-book'
	},
	{
		href: editHref,
		text: "rightSidebar.editPage",
		depth: 2,
		icon:'pencil'
	}
]

---
<LinkList headingTitle="rightSidebar.contribute" linkItems={linkItems} />
