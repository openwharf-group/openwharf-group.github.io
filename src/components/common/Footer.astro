---
import { useTranslations } from "@i18n/util";
const t = useTranslations(Astro);
---
<footer class="bg-gray-14 p-10">
  <slot name="after-footer" />
  <div
    class="footer_top_functional flex bg-gray-13 rounded-2xl text-center lg:flex-row"
  >
    <div
      class="footer_left grid grid-cols-1 gap-0 text-left mt-9 ml-10 max-w-2xl"
    >
      <p
        class="footer_left_title text-gray-02 text-[1.75rem] leading-9 lg:w-[25.9375rem] lg:h-10"
      >
        {t('commmon.footer.title')}
      </p>
      <p
        class="footer_left_des text-gray-09 text-[1.125rem] w-[42rem] h-[3.5625rem] mt-4 mb-[1.875rem]"
      >
        {t('commmon.footer.subscribe')}
      </p>
      <input
        type="text"
        placeholder={t('commmon.footer.email.placeholder')}
        class="footer_left_email max-w-[37.5rem] input input-ghost bg-gray-12 block rounded-2xl lg:w-[31.25rem] lg:h-[4.375rem]"
      />
      <button
        class="footer_left_button max-w-[9.6875rem] btn bg-gray-02 text-gray-14 rounded-full text-[0.75rem] font-medium block lg:w-[9.6875rem] lg:h-[3.375rem] lg:mt-6 lg:mb-[11.1875rem] lg:py-[1.1875rem] lg:px-[2.875rem]"
        >
        {t('commmon.footer.actions.subscribe')}
      </button
      >
    </div>
    <div
      class="footer_right grid grid-cols-2 gap-2 flex text-left mt-9 ml-[9.625rem]"
    >
      <div>
        <p
          class="text-gray-10 text-[0.75rem] leading-4 tracking-[.15em] lg:mb-[3.0625rem]"
        >
          {t('commmon.footer.docs')}
        </p>
        <ul class="list-none w-[13.3125rem] h-4 ps-0">
          <li>
            <a
              href="#"
              class="text-[.875rem] font-medium leading-5 tracking-normal mb-4 text-gray-04 no-underline"
            >
              {t('commmon.footer.actions.overview')}
            </a>
          </li>
          <li>
            <a
              href="/docs/v2/quickstart/quick-start"
              class="text-[.875rem] font-medium leading-5 tracking-normal mb-4 text-gray-04 no-underline"
            >
              {t('commmon.footer.actions.start')}
            </a>
          </li>
          <li>
            <a
              href="/docs/v2/quickstart/contributing"
              class="text-[.875rem] font-medium leading-5 tracking-normal mb-4 text-gray-04 no-underline"
            >
              {t('commmon.footer.actions.guide')}
            </a>
          </li>
        </ul>
      </div>
      <div>
        <p
          class="text-gray-10 text-[0.75rem] leading-4 tracking-[.15em] lg:mb-[3.0625rem]"
        >
          {t('commmon.footer.resource')}
        </p>
        <ul class="list-none w-[13.3125rem] h-4 ps-0">
          <li>
            <a
              href="#"
              class="text-[.875rem] font-medium leading-5 tracking-normal mb-4 text-gray-04 no-underline"
            >
              {t('commmon.footer.actions.comm')}
            </a>
          </li>
          <li>
            <a
              href="https://www.aliyun.com/product/aliware/mse?spm=nacos.io.topbar.0.0.0"
              target="_blank"
              class="text-[.875rem] font-medium leading-5 tracking-normal mb-4 text-gray-04 no-underline"
            >
              {t('commmon.footer.actions.mse')}
            </a>
          </li>
          <li>
            <a
              href="https://www.aliyun.com/product/edas?source_type=nacos_pc_20181219101824"
              target="_blank"
              class="text-[.875rem] font-medium leading-5 tracking-normal mb-4 text-gray-04 no-underline"
            >
              {t('commmon.footer.actions.edas')}
            </a>
          </li>
        </ul>
      </div>
    </div>
  </div>
  <div class="divider divider-vertical bg-gray-13 mt-10 mb-0 h-[0.05rem]"></div>
  <div
    class="bottom_watermark text-[.875rem] text-gray-09 leading-6 text-center tracking-normal lg:pb-1 lg:pt-8"
  >
    Copyright Â© 2023 Nacos
  </div>
</footer>

<style>
  @media (min-width: 50rem) and (max-width: 72rem) {
    .footer_top_functional {
      flex-direction: column;
      height: auto;
      min-height: 28rem;
    }
    .footer_right {
      margin-left: 2.5rem ;
      margin-bottom: 2rem;
    }
    .footer_left_button {
      margin: 1rem 0rem;
    }
    .footer_right > div {
      height: auto;
    }
    .footer_right p {
      margin-bottom: 2rem;
    }
    .footer_right ul {
      height: 100%;
    }
  }
  @media (max-width: 50rem) {
    footer {
      padding: 1.5rem !important;
    }
    .footer_top_functional {
      flex-direction: column;
      /* align-items: center; */
      min-height: 28rem;
      padding: 1.5rem;
      height: auto;
    }

    .footer_left {
      width: 100%;
      margin-left: 0;
      margin-bottom: 1rem;
      margin-top: 0;
    }

    .footer_left p {
      margin: 0rem 0rem 1rem 0rem;
      width: auto;
      height: auto;
    }
    .footer_left_title{
      font-size: 1.125rem;
    }
    .footer_left_des{
      font-size: .875rem;
    }

    .footer_left_email {
      width: auto;
      height: 3rem;
      font-size: .75rem;
    }

    .footer_left_button {
      margin: 1rem 0rem;
      width:6rem;
      height: 2rem;
      min-height: 2rem;
      padding-left: 0.75rem;
      padding-right: 0.75rem;
    }

    .footer_right {
      width: 100%;
      margin: 0rem !important;
      padding-top: 0rem;
      overflow: hidden;
    }

    .footer_right > div {
      margin-right: 1rem;
      margin-bottom: 1rem;
      width: 8.25rem;
      height: auto;
    }

    .footer_right p {
      width: 8.25rem;
      margin-right: 1rem;
      margin-bottom: 1rem;
    }
    .footer_right ul {
      height: 100%;
    }
    .footer_right a{
      font-size: .75rem !important;
    }

    .bottom_watermark {
      margin: 0rem 0.5rem;
      padding: 0.5rem 0rem;
    }
  }
</style>
