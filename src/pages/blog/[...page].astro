---

<BaseLayout title="Nacos Blog">
	<div class="flex flex-col items-center gap-20 py-8 lg:p-12 xl:p-20 bg-gray-14">
		<ul class="flex max-w-screen-md flex-col gap-y-4 md:gap-y-6 lg:gap-y-8">
			{page.data.map((post) => <BlogPostPreview post={post} />)}
		</ul>

		<Pagination restRoute allPages={allPages} page={page} class="mx-auto" />
	</div>
</BaseLayout>
