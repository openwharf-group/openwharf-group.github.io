---
import '@starlight/style/props.css';
import '@starlight/style/reset.css';
import '@starlight/style/shiki.css';
import '@starlight/style/util.css';
import '../style/global.css'
import { useTranslations } from '@i18n/util';
const t = useTranslations(Astro);

import {
	Header,
	PageFrame
} from 'virtual:starlight/components';

const labels = {};
export type Props = {
    title: string;
};
const { title } = Astro.props;
---

<html lang="en" data-theme="light">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
    </head>
    <body>
        <!-- @ts-ignore -->
		<PageFrame {...Astro.props}>
            <!-- @ts-ignore -->
			<Header slot="header" {...Astro.props}  labels={labels}>
                <div slot="community">community 文档子菜单</div>
            </Header>
			<slot />
		</PageFrame>
    </body>
</html>
